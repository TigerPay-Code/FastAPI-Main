#
# Logrotate 配置，用于管理所有 FastAPI 服务的日志
#

/data/FastAPI-Main/ReceiveNotify/log/*.log {
    daily
    rotate 60
    compress
    dateext
    missingok
    notifempty
    sharedscripts
    postrotate
        # 针对 receive_notify 服务
        /usr/bin/systemctl restart receive_notify.service
    endscript
}